

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Taller</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            @Html.ActionLink("Administración de Taller", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("Inicio", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Clientes", "Index", "Client", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Citas", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    @if (Session.Count == 0)
                    {
                        <script>
        window.location.href = '@Url.Action("Index", "Login")';
                        </script>
                    }
                    else if (Session["Type"].ToString() == "admin")
                    {

                        <li>@Html.ActionLink("Usuarios", "Index", "User", new { area = "" }, new { @class = "nav-link" })</li>
                    }
                </ul>
            </div>
            <ul class="nav navbar-nav ml-auto">
                <li class="nav-item">
                    <div>
                        <span style="font-size:14px;font-weight:400; color:white;"> Bienvenido: @Session["Name"]  </span>
                    </div>
                </li>

                <li class="nav-item dropdown">
                    <a class="nav-link" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-user-circle fa-2x"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" id="logOut">
                        <a class="dropdown-item" href="#">
                            Cerrar sesión
                        </a>
                    </div>
                </li>
            </ul>

        </div>
    </nav>
    <div class="container body-content min-vh-100">
        @RenderBody()

    </div>
    <footer class="footer mt-auto py-3 bg-light">
        <div class="container">
            <span class="text-muted">Taller Mecánico.</span>
        </div>
    </footer>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
